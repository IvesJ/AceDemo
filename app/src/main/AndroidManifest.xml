<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ace.acedemo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="BROA" />

    <application
        android:name=".DemoApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AceDemo">
        <activity
            android:name=".activity.CustomViewActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:exported="true"
            android:launchMode="singleTask">
        </activity>
        <activity
            android:name=".activity.ImageActivity"
            android:exported="true" />
        <activity
            android:name=".activity.AnimActivity"
            android:theme="@style/DialogActivityStyle" />
        <activity
            android:name=".activity.RevealAnimActivity"
            android:theme="@style/DialogActivityStyle" />
        <activity
            android:name=".activity.ListActivity"
            android:exported="true">
        </activity>
    </application>

</manifest>